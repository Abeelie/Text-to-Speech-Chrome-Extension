{
  "manifest_version": 3,
  "name": "Text to Speech",
  "description": "Select any text on on webpage and the extension will read it out to you",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["contextMenus", "search", "tabs", "storage", "tts", "notifications"],
  "options_page": "options/options.html"
}
